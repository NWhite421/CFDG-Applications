@{
    string PageTitle = "Field Data Submitter";
    ViewBag.Title = PageTitle;
}

<div class="jumbotron">
    <h1 class="display-4 text-center">@PageTitle</h1>
    <p class="lead text-center">The Field Data Submitter (FDS) allows field crews to automatically send data to the office either by e-mail or TCP Connection.</p>
    <p class="text-center">This product is free and open-source under the <a href=@Url.Action("Licenses", "Home")>GNU General Public License v3.0 (GNU GPLv3)</a></p>
    <hr class="my-4" />
    <p class="text-center">
        <span class="btn btn-info">Version: 0.10.3</span>
        <span class="btn btn-info">Build: Pre-Release</span>
        <button class="btn btn-primary" action="#download">Download</button>
        <button class="btn btn-warning" onclick="window.location.href='/Support/FieldDataSubmitter'">Support</button>
    </p>
</div>

<h3 id="download">Download</h3>
<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Release</th>
        <th scope="col">Date</th>
        <th scope="col">Link</th>
    </tr>
    </thead>
    <tbody>
    <tr class="table-active">
        <th scope="row">fds_installer.exe</th>
        <th>0.10.3 Release Candidate</th>
        <th>11/03/2020</th>
        <th><a href="https://s3.us-east-2.amazonaws.com/cfdg.releases/fds/FDS_Installer_0_10_3.rar">Download</a></th>
    </tr>
    </tbody>
</table>